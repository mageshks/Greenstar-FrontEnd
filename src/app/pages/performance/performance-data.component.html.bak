<div class="row">
    <div class="col-md-12">
        <nb-card>
            <nb-card-header>
                Performance Data
            </nb-card-header>

            <nb-card-body>

                <div class="row">
                    <div class="col-sm-4">
                        <label for="address" class="col-form-label">School</label>
                        <div class="input-group">
                            <select id="school" name="school" class="form-control form-control-sm">
                                <option value=''>Select</option>
                                <option value='Nikita Matriculation School'>Nikita Matriculation School</option>
                                <option value='SSVM Matriculation School'>SSVM Matriculation School</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <label for="address" class="col-form-label">Class</label>
                        <div class="input-group">
                            <select id="className" name="className" class="form-control form-control-sm">
                                <option value=''>Select</option>
                                <option value='First'>First</option>
                                <option value='Second'>Second</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <label for="address" class="col-form-label">Section</label>
                        <div class="input-group">
                            <select id="section" name="section" class="form-control form-control-sm">
                                <option value=''>Select</option>
                                <option value='A'>A</option>
                                <option value='B'>B</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <label for="address" class="col-form-label">Month</label>
                        <div class="input-group">
                            <select id="month" name="month" class="form-control form-control-sm">
                                <option value=''>Select</option>
                                <option value='Jan'>Jan</option>
                                <option value='Feb'>Feb</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <label for="address" class="col-form-label">Week</label>
                        <div class="input-group">
                            <select id="week" name="week" class="form-control form-control-sm">
                                <option value=''>Select</option>
                                <option value='First'>Week-1</option>
                                <option value='Second'>Week-2</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row pt-3">
                    <div class="col-sm-2">
                        <button class="btn btn-primary btn-sm" (click)="openBulkUploadMmodal();">Bulk Upload</button>
                    </div>

                    <div class="col-sm-3">
                        <button class="btn btn-primary btn-sm">Add Perofrmance Data</button>
                    </div>

                    <div class="col-sm-7 text-right">
                        <button class="btn btn-primary btn-sm">Search</button>
                    </div>
                </div>

                <div class="row pt-5">
                    <div class="col-sm-4">
                        Performance Data
                    </div>
                    <div class="col-sm-4 text-right">
                        <nb-checkbox (change)="checkAllPerformance($event);">Select All</nb-checkbox>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-primary btn-sm">Edit</button>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-primary btn-sm">Submit</button>
                    </div>
                </div>

                <div class="row pt-2">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table class="table table-sm table-striped table-bordered">
                                <thead>
                                    <!-- Top Header Row - Start -->
                                    <tr>
                                        <th rowspan="2" scope="col">Roll ID</th>
                                        <th rowspan="2" scope="col">Name</th>
                                        <ng-container *ngFor="let headerObj of performanceSource.headers">
                                            <th colspan="3" scope="col" class="text-center">
                                                <label nbTooltip="{{headerObj.title}}" nbTooltipPlacement="top" nbTooltipStatus="info">{{headerObj.title}}</label> &nbsp;
                                                <nb-checkbox [value]="headerObj.checkValue" (change)="checkPerformanceDayWise($event, headerObj);"></nb-checkbox>
                                            </th>
                                        </ng-container>
                                    </tr>
                                    <!-- Top Header Row - End -->

                                    <!-- Top Sub Header Row - Start -->
                                    <tr>
                                        <ng-container *ngFor="let headerObj of performanceSource.headers">
                                            <ng-container *ngIf="headerObj.subTitleList.length > 0">
                                                <th *ngFor="let subTitle of headerObj.subTitleList" class="text-center" scope="col">
                                                    <label nbTooltip="{{subTitle.title}}" nbTooltipPlacement="top" nbTooltipStatus="info">{{subTitle.alais}}</label>
                                                    <nb-checkbox [value]="subTitle.checkValue" (change)="checkPerformanceParamWise($event, headerObj, subTitle);"></nb-checkbox>
                                                </th>
                                            </ng-container>
                                        </ng-container>
                                    </tr>
                                    <!-- Top Sub Header Row - End -->
                                </thead>
                                <tbody>
                                    <!-- Row content - Start -->
                                    <tr *ngFor="let performanceRow of performanceSource.performanceRows">
                                        <td scope="col">{{ performanceRow.rollId }}</td>
                                        <td scope="col">{{ performanceRow.name }}</td>
                                        <ng-container *ngFor="let performanceDay of performanceRow.performanceDays">
                                            <!-- Single Value -->
                                            <td scope="col" *ngFor="let performanceData of performanceDay.performanceDatas" style="text-align:center;">
                                                <nb-checkbox [value]="performanceData.value" (change)="checkCellPerformanceDataStatus($event, performanceRow, performanceDay, performanceData)"></nb-checkbox>
                                            </td>
                                        </ng-container>
                                    </tr>
                                    <!-- Row content - End -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </nb-card-body>
        </nb-card>
    </div>
</div>